<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#444">

    <LinearLayout
        android:id="@+id/ll_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_parm1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="654545"
                    android:textColor="#5A5A5A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_parm2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="1551"
                    android:textColor="#F2143F"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:src="@drawable/start_close" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="选择支付方式"
            android:textColor="#343435"
            android:textSize="8sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_face_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:background="#F7F4F4"
                android:drawableTop="@drawable/main_face_pay"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:text="支付宝刷脸付"
                android:textColor="#242424"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_bt2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="#F7F4F4"
                android:drawableTop="@drawable/main_wx_code"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:text="微信扫码付"
                android:textColor="#242424"
                android:textSize="12sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bt3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:background="#F7F4F4"
                android:drawableTop="@drawable/main_ali_code"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:text="支付宝扫码付"
                android:textColor="#242424"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="#F7F4F4"
                android:drawableTop="@drawable/main_ali_code"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:text="支付宝扫码付"
                android:textColor="#242424"
                android:textSize="12sp"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>